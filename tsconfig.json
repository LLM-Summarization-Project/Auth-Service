{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": false,
    
    // FIX deprecation warning
    "ignoreDeprecations": "6.0",

    // Nest default (ยังใช้ได้ ไม่ต้องลบ)
    "baseUrl": "./"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
}
